@model KanbanTable.Entities.TaskKanban

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskKanban</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <label asp-for="Project"> Проект</label><br />
    <select asp-for="Project">
        @foreach (var proect in ViewBag.proect)
        {
            <option value="proect.Project">@proect.Name</option> //выпадающий список
        }
    </select>
</div>
<div>
    <label asp-for="Status"> Статус</label><br />
    <select asp-for="Status">
        @foreach (var stat in ViewBag.stat)
        {
            <option value="stat.Project">@stat.Name</option>//выыпадающий список
        }
    </select>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
