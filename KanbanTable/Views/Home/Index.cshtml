<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Канбан-доска</title>
    <style>
        .kanban-board {
            display: flex;
            justify-content: space-between;
        }
        .kanban-column {
            width: 30%;
            background-color: #f4f4f4;
            margin: 10px;
            padding: 10px;
        }
        .kanban-item {
            background-color: #fff;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            padding: 10px;
        }
    </style>
   


</head>
<body>
    <div class="kanban-board">
        <div class="kanban-column" id="backlog">
            <h3>Бэклог</h3>
            
            <div class="kanban-card">task.Name</div>
            <div class="kanban-card">Карточка 2</div>
           
        </div>
        <div class="kanban-column" id="to-do">
            <h3>Сделать</h3>
           
        </div>
        <div class="kanban-column" id="in-progress">
            <h3>В процессе</h3>
            
        </div>
        <div class="kanban-column" id="review">
            <h3>На проверке</h3>
           
        </div>
        <div class="kanban-column" id="done">
            <h3>Сделано</h3>
           
        </div>
    </div>

    @section Scripts {
        <script type="text/javascript">
            // JavaScript 
        </script>
    }
</body>
</html>

